<div class="container" style="margin-top: 100px;display:flex;justify-content:center;">
  <div class="row" style="width:500px;">
    <form action="/admin/products/clothes/clothes_list/add_clothes" method="post" enctype="multipart/form-data" style="display:flex;flex-direction:column;justify-content:center;">
      <div class="mb-3 row">
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="name" name="name">
        </div>
      </div>
      <div class="mb-3 row">
        <div class="col-sm-10">
          <input type="number" class="form-control" placeholder="price" name="price">
        </div>
      </div>
      <div class="mb-3 row">
        <div class="col-sm-10">
          <input type="number" class="form-control" name="stock" placeholder="stock">
        </div>
      </div>
      <div class="mb-3 row">
        <div class="col-sm-10">
          <label>Imagen <input type="file" name="image" ></label>
        </div>
      </div>

      <button type="submit" class="btn" style="border: grey 1px solid;width: 100px;">AGREGAR</button>
    </form>
    {{#if error}}
      <p>{{message}}</p>
    {{/if}}
  </div>
</div>