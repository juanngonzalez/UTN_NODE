<div class="container" style="margin-top:50px;">
    <h2>CLOTHES</h2>
    <div>
        <div style="border: solid grey 1px;margin:10px;border-radius:5px;">
            <div>
                <div>
                    <table class="table">
                        <thead>
                            <tr class="table-dark">
                                <th scope="col">#</th>
                                <th style="color: rgba(0, 0, 0, 0);" scope="col">.</th>
                                <th scope="col">Name</th>
                                <th class="col">Price</th>
                                <th scope="col">Stock</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each clothes}}
                            <tr>
                                <th scope="row">{{id_product}}</th>
                                <td>{{{image}}}</td>
                                <td>{{name}}</td>
                                <td>{{price}}</td>
                                <td>{{stock}}</td>
                                
                                
                                <td class="text-end">
                                    <a class="btn btn-secondary" href="/admin/products/clothes/clothes_list/update/{{id_product}}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                    <a class="btn btn-secondary" href="/admin/products/clothes/clothes_list/delete/{{id_product}}"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-7">
            <a class="btn" style="border: grey 1px solid;" href="/admin/products/clothes/clothes_list/add_clothes"><i class="fa fa-plus" style="padding-right:5px"aria-hidden="true"></i>Nuevo</a>
        </div>
    </div>
</div> 