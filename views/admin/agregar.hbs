<div class="container" style="margin-top: 100px;display:flex;justify-content:center;">
  <div class="row" style="width:500px;">
    <form action="/admin/novedades/agregar" method="post" style="display:flex;flex-direction:column;justify-content:center;">
      <div class="mb-3 row">
        <div class="col-sm-10">
          <input type="text" class="form-control" id="inputUser" placeholder="titulo" name="title">
        </div>
      </div>
      <div class="mb-3 row">
        <div class="col-sm-10">
          <textarea type="text" class="form-control" placeholder="subtitulo" name="subtitle"></textarea>
        </div>
      </div>
      <div class="mb-3 row">
        <div class="col-sm-10">
          <textarea type="text" class="form-control" name="body" placeholder="cuerpo"></textarea>
        </div>
      </div>
      <button type="submit" class="btn" style="border: grey 1px solid;width: 100px;"">AGREGAR</button>
    </form>
    {{#if error}}
      <p>{{message}}</p>
    {{/if}}
  </div>
</div>