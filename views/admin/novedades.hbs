<div class="container" style="margin-top:50px;">
    <h2>NOVEDADES</h2>
    <div>
        <div style="border: solid grey 1px;margin:10px;border-radius:5px;">
            <div>
                <div>
                    <table class="table">
                        <thead>
                            <tr class="table-dark">
                                <th scope="col">#</th>
                                <th scope="col">Titulo</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each novedades}}
                            <tr>
                                <th scope="row">{{id_new}}</th>
                                <td>{{title}}</td>
                                <td class="text-end">
                                    <a class="btn btn-secondary"href="/admin/novedades/modificar/{{id_new}}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                    <a class="btn btn-secondary" href="/admin/novedades/eliminar/{{id_new}}"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-7">
            <a class="btn" style="border: grey 1px solid;" href="/admin/novedades/agregar"><i class="fa fa-plus" style="padding-right:5px"aria-hidden="true"></i>Nuevo</a>
        </div>
    </div>
</div>